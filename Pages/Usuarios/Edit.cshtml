@page "{id:long}"
@model GS.NET.Pages_Usuarios.EditModel

@{
    ViewData["Title"] = "Editar Usu√°rio";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card w-50 shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form method="post" class="needs-validation" novalidate>
                @* Em vez de Model.Usuario, uso Model.Input *@
                @await Html.PartialAsync("_UsuarioForm", Model.Input)

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-warning me-2">Atualizar</button>
                    <a asp-page="./Index" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function() {
            'use strict';
            document.querySelectorAll('.needs-validation').forEach(form => {
                form.addEventListener('submit', e => {
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    form.classList.add('was-validated');
                });
                form.querySelectorAll('input, select').forEach(field => {
                    field.addEventListener('input', () => {
                        if (field.checkValidity()) {
                            field.classList.remove('is-invalid');
                        }
                    });
                });
            });
        })();
    </script>
}
