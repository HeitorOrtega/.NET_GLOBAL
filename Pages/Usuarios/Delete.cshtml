@page "{id:long}"
@model GS.NET.Pages_Usuarios.DeleteModel

@{
    ViewData["Title"] = "Excluir Usuário";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card w-50 shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <p>Tem certeza que deseja excluir o usuário <strong>@Model.Usuario.Nome</strong>?</p>
            <form method="post">
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger me-2">Excluir</button>
                    <a asp-page="./Index" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function() {
            'use strict';
            document.querySelectorAll('.needs-validation').forEach(form => {
                form.addEventListener('submit', e => {
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    form.classList.add('was-validated');
                });
            });
        })();
    </script>
}