@model GS.NET.ViewModels.UsuarioInputModel

<div class="row g-3">
    <div class="col-12 form-floating">
        <input asp-for="Nome"
               class="form-control @(ViewData.ModelState[nameof(Model.Nome)]?.Errors.Count > 0 ? "is-invalid" : "")"
               placeholder="Nome completo" />
        <label asp-for="Nome">Nome completo</label>
        <div class="invalid-feedback">
            @ViewData.ModelState[nameof(Model.Nome)]?.Errors.FirstOrDefault()?.ErrorMessage
        </div>
    </div>

    <div class="col-md-6 form-floating">
        <input asp-for="Email"
               type="email"
               class="form-control @(ViewData.ModelState[nameof(Model.Email)]?.Errors.Count > 0 ? "is-invalid" : "")"
               placeholder="usuario@exemplo.com" />
        <label asp-for="Email">Email</label>
        <div class="invalid-feedback">
            @ViewData.ModelState[nameof(Model.Email)]?.Errors.FirstOrDefault()?.ErrorMessage
        </div>
    </div>

    <div class="col-md-6 form-floating">
        <input asp-for="Senha"
               type="password"
               class="form-control @(ViewData.ModelState[nameof(Model.Senha)]?.Errors.Count > 0 ? "is-invalid" : "")"
               placeholder="••••••" />
        <label asp-for="Senha">Senha (mín. 6)</label>
        <div class="invalid-feedback">
            @ViewData.ModelState[nameof(Model.Senha)]?.Errors.FirstOrDefault()?.ErrorMessage
        </div>
    </div>

    <div class="col-md-6 form-floating">
        <input asp-for="Cpf"
               class="form-control @(ViewData.ModelState[nameof(Model.Cpf)]?.Errors.Count > 0 ? "is-invalid" : "")"
               placeholder="00000000000" maxlength="11" />
        <label asp-for="Cpf">CPF (11 dígitos)</label>
        <div class="invalid-feedback">
            @ViewData.ModelState[nameof(Model.Cpf)]?.Errors.FirstOrDefault()?.ErrorMessage
        </div>
    </div>

    <div class="col-md-6 form-floating">
        <input asp-for="Cep"
               class="form-control @(ViewData.ModelState[nameof(Model.Cep)]?.Errors.Count > 0 ? "is-invalid" : "")"
               placeholder="00000000" maxlength="8" />
