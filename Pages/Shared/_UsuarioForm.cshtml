        <div class="invalid-feedback">
            @ViewData.ModelState[nameof(Model.Cep)]?.Errors.FirstOrDefault()?.ErrorMessage
        </div>
    </div>

    <div class="col-12 form-floating">
        <input asp-for="Logradouro"
               class="form-control @(ViewData.ModelState[nameof(Model.Logradouro)]?.Errors.Count > 0 ? "is-invalid" : "")"
               placeholder="Rua, avenida…" />
        <label asp-for="Logradouro">Logradouro</label>
        <div class="invalid-feedback">
            @ViewData.ModelState[nameof(Model.Logradouro)]?.Errors.FirstOrDefault()?.ErrorMessage
        </div>
    </div>

    <div class="col-md-4 form-floating">
        <input asp-for="Numero"
               class="form-control @(ViewData.ModelState[nameof(Model.Numero)]?.Errors.Count > 0 ? "is-invalid" : "")"
               placeholder="Número" maxlength="10" />
        <label asp-for="Numero">Número</label>
        <div class="invalid-feedback">
            @ViewData.ModelState[nameof(Model.Numero)]?.Errors.FirstOrDefault()?.ErrorMessage
        </div>
    </div>

    <div class="col-md-4 form-floating">
        <input asp-for="Complemento"
               class="form-control @(ViewData.ModelState[nameof(Model.Complemento)]?.Errors.Count > 0 ? "is-invalid" : "")"
               placeholder="Apto, bloco (opcional)" />
        <label asp-for="Complemento">Complemento</label>
        <div class="invalid-feedback">
            @ViewData.ModelState[nameof(Model.Complemento)]?.Errors.FirstOrDefault()?.ErrorMessage
        </div>
