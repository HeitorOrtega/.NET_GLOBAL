               class="form-control @(ViewData.ModelState[nameof(Model.Bairro)]?.Errors.Count > 0 ? "is-invalid" : "")"
               placeholder="Bairro" maxlength="100" />
        <label asp-for="Bairro">Bairro</label>
        <div class="invalid-feedback">
            @ViewData.ModelState[nameof(Model.Bairro)]?.Errors.FirstOrDefault()?.ErrorMessage
        </div>
    </div>

    <div class="col-md-6 form-floating">
        <input asp-for="Cidade"
               class="form-control @(ViewData.ModelState[nameof(Model.Cidade)]?.Errors.Count > 0 ? "is-invalid" : "")"
               placeholder="Cidade" maxlength="100" />
        <label asp-for="Cidade">Cidade</label>
        <div class="invalid-feedback">
            @ViewData.ModelState[nameof(Model.Cidade)]?.Errors.FirstOrDefault()?.ErrorMessage
        </div>
    </div>
</div>
